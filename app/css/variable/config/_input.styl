// === Inputs ===
.input,.textarea,.select
	padding 18px 15px
	border 1px solid $border-color
	resize: none
	outline: 0 !important
	border-radius 4px
	font-family $v-font
	display block!important
	placeholder(#888888)
	background: #f6f6f6
	tr(all)
	&:focus
		border 1px solid $mark
		background: white

.style-label
	display flex
	position relative
	align-items center

.style-label--disable
	@extend .disabled

.check-el
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		br(2px)
		cp()
		tr(all)
		width 32px
		height 32px
		position relative
		display inline-block
		margin-right 30px
		background white
		border 1px solid $border-color
		&:hover
			border 1px solid $mark
	.icon-check
		display none
	.sytle-input
		&:checked ~ .sytle-input-element
			flex(mid)
			color white
			background: $mark
			border 1px solid $mark
			.icon-check
				display block
				fill white
				size 16px

.style-label--radio
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		width 32px
		height 32px
		position relative
		display inline-block
		margin-right 30px
		background white
		border 1px solid $border-color
		round()
		cp()
	.icon-check
		display none
	.sytle-input
		&:checked ~ .sytle-input-element
			flex(mid)
			color white
			box-shadow 0 2px 4px rgba(0, 45, 135, 0.16)
			border-color white
			background: white
			.icon-radio
				round()
				size 16px
				background $mark

.sytle-input-text
	color black
	width: calc(100% - 80px)
	line-height: 1.6
	a
		color $mark

//form
.input-row
	margin-bottom: 20px
	.input
		width: 100%
.input-row__title
	margin-bottom: 10px

.input-row--error
	.input
		border-color $red
		color $red
	.error-msg
		display block
.error-msg
	color $red
	margin: 10px 0
	display none

.input-cont
	display: grid
	grid-gap 20px
.input-cont--two
	grid-template-columns: 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr
.input-cont--three
	grid-template-columns: 1fr 1fr 1fr
	+below(640px)
		grid-template-columns: 1fr

//checkbox remember
.login-remember
	.style-label
		+below(768px)
			align-items: flex-start
	.sytle-input-text
		font-size: 14px
		color black
		width: calc(100% - 80px)
		line-height: 1.6
		a
			color $mark
	margin-bottom: 20px

.input-get
	f()
	align-items stretch
	margin-bottom: 20px
	.input
		border-radius 5px 0 0 5px
.input-get__btn
	position relative
	.icon
		position absolute
		size 14px
		fill white
		top 50%
		left 50%
		margin-left: -7px
		margin-top: -7px
	.input-get__btn-el
		height: 100%
		background: $mark
		border-radius 0 5px 5px 0
		border 0
		width: 60px
		&:hover
			background: darken($mark,5)

//upload
.upload-wrap
	flex(mid)
	fw()
	margin-bottom: 20px
.upload
	f()
	cp()
	br(10px)
	align-items: flex-start
	justify-content: center
	border 1px solid $border-color
	box-shadow 0px 3px 14px white
	tr(all)
	margin-bottom: 10px
	&:hover
		bsh()
.upload__icon
	padding: 10px
	border-right 1px solid $border-color
	height: 50px
	flex(mid)
	.icon
		size 25px
		fill $red
.upload__text
	height: 50px
	margin-left: -1px
	padding: 15px
	width: auto
	flex(mid)
.upload-img
	flex(mid)
.upload-img__el
	size 50px
	br(10px)
	border 1px solid $border-color
	margin-right: 10px
	margin-bottom: 10px
	background-size: cover
	background-repeat: no-repeat
	position: relative
	overflow: hidden
	cp()
	&:hover
		&:before
			content 'X'
			opacity:1

	&:before
		content 'X'
		position: absolute
		background: #000000b3
		width: 100%
		height: 100%
		left 0
		top 0
		flex(mid)
		color white
		opacity:0
		tr(all)
.upload-btn
	position: absolute
	left -9999px


