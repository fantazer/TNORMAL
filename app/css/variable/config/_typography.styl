//  ============================ Typography ============================

//webfont('RUB', 'rouble-webfont', 'normal')
//Add fotn rub write .rub a - (a,b,c,d - change type font)

//font(name,file,size)
font('PT sans','PT-sans',400)
$v-font =  'PT sans', sans-serif

typeSize(fontSm,font)
	+below(768px)
		font-size font px
	font-size fontSm px

/*
font-size 14px
@extend .type--sm

font-size 20px
@extend .type--main

font-size 24px
@extend .type--md

font-size 30px
@extend .type--lg

font-size 40px
@extend .type--xl
*/

.type--xs
	typeSize(12,10)

.type--sm
	typeSize(14,12)

.type--main
	typeSize(16,14)

.type--md
	typeSize(18,15)

.type--lg
	typeSize(26,18)

.type--xl
	typeSize(36,20)

.type--mark
	color $mark

.type--bold
	font-weight bold

.type--center
	text-align center

.title
	margin-bottom: 30px
	font-weight: 700

.title--sm
	@extend .type--sm

.title--main
	@extend .type--main

.title--md
	@extend .type--md

.title--lg
	@extend .type--lg

.title--xl
	@extend .type--xl

h5
	@extend .type--sm
h4
	@extend .type--main
h3
	@extend .type--md
h2
	@extend .type--lg
h1
	@extend .type--xl

a
	color $link-color
	text-decoration: none
	tr()
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

p
	@extend .type--main

.link--mark
	color $mark
	&:hover
		color darken($mark,20)
	&:visiter
		color darken($mark,30)

.link--main
	color $link-color
	hover-underline($link-color)
	&:hover
		color darken($link-color,20)
	&:visiter
		color darken($link-color,30)

.link--text
	color $link-color
	text-decoration underline
	&:hover
		text-decoration none



.text
	color black
	h1,h2,h3,h4,h5
		margin 3.5rem 0 2rem
	h1:first-of-type,
	h2:first-of-type,
	h3:first-of-type,
	h4:first-of-type,
	h5:first-of-type,
	h6:first-of-type,
	p
		margin-top: 0!important
	a:not(.btn--md):not(.btn--sm)
		@extend .link--mark
	img
		@extend .m-64
	p
		line-height: 1.6
		margin-bottom: 30px
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0
	ul
		margin-bottom: 30px
		padding-left 26px
		list-style none
		li
			line-height: 1.6
			margin-bottom: 16px
			position relative
			//font-weight: 700
			&:before
				content ''
				position absolute
				size 12px
				round()
				border 2px solid $mark
				left -26px
				top 6px
			&:last-child
				margin-bottom: 0

// icons
.icon-row
	f()
	align-items center
	span
		width calc(100% - 36px)
.icon-row--extend
	margin-bottom: 32px

.icon
	size 24px

.icon--md
	size 32px

.icon--lg
	size 48px

.icon--xl
	size 80px

.icon--left
	margin-left: 10px

.icon--right
	margin-right: 10px

.icon--mark
	fill $mark

.icon--gray
	fill $gray

.icon--orange
	fill $orange

.icon--white
	fill white

.db
	display block

// icons === end